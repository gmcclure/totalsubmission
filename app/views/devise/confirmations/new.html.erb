<h2>Resend Confirmation Instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, role: 'form' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: 'form-control' %></div>

  <div><%= f.submit "Resend Confirmation Instructions", class: 'btn btn-success' %></div>
<% end %>

<%= render "devise/shared/links" %>
